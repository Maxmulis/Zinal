<%= simple_form_for [ @group, @person ] do |f| %>
<%= f.input :firstname %>
<%= f.input :birthdate, as: :date, start_year: Date.today.year - 100,
                              end_year: Date.today.year,
                              order: [:day, :month, :year] %>
<%= f.button :submit %>
<% end %>
<%= link_to('Cancel', group_people_path(@group)) %>
