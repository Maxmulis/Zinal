<%= turbo_frame_tag dom_id(@group) do %>
   <div class="d-flex justify-content-center">
    <%= link_to "Info", group_path(@group), class: "btn btn-lg btn-primary active" %>
    <%= link_to group_people_path(@group) do %>
      <button class="btn btn-lg btn-primary">
        <%= @group.people.size %> <i class="fas fa-users"></i>
      </button>
    </div>
    <% end %>
    <div class="card-people">
      <% @people.each do |person| %>
        <%= turbo_frame_tag dom_id(person) do %>
          <%= link_to edit_person_path(person) do %>
            <div class="card-person">
              <% if person.photo.attached? %>
                <%= cl_image_tag(person.photo.key, class: 'avatar-mid') %>
              <% else %>
                <%= cl_image_tag("https://res.cloudinary.com/dxtj8yhxs/image/upload/v1614959650/Avatar-Grey-Account-User-Person-Operating-System-1699635_sgbdoo.png", crop: :thumb, gravity: :face, class: 'avatar-mid') %>
              <% end %>
              <p><%= person.firstname %></p>
              <p><%= person.birthdate %></p>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="d-flex flex-row-reverse">
      <%= link_to new_group_person_path(@group), class: "btn btn-success" do %>
        <i class="fas fa-plus"></i> <i class="fas fa-user"></i>
    <% end %>
    </div>
<% end %>
