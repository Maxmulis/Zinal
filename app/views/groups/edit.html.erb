<%= turbo_frame_tag dom_id(@group) do %>
  <%= simple_form_for @group do |f| %>
    <%= f.input :name %>
    <%= f.input :street, id: "street_group" %>
    <%= f.input :number %>
    <%= f.input :zip %>
    <%= f.input :town %>
    <%= f.submit '✅', class: 'btn'  %>
  <% end %>
  <%= link_to('❌', group_path(@group), class: 'btn') %>
<% end %>
